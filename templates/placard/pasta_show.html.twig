
{% extends 'base.html.twig' %}

{% block title %}WAZAAAAAA!{% endblock %}

{% block body %}

    {% block main %}
        <h1>Pasta</h1>

        {% dump pasta %}

        <table class="table">
            <tbody>

            <tr>
                <th>Id</th>
                <td>{{ pasta.id }}</td>
            </tr>
            <tr>
                <th>pasta</th>
                <td>{{ pasta.nome }}</td>
            </tr>
            <tr>
                <th>cottura</th>
                <td>
                    <ul>
                        {% for cottura in pasta.cotturas %}
                            <a href="{{ path('cottura_show', {'id' : cottura.id}) }}">{{ cottura.typo }}</a>
                        {% else %}
                            pas de cuisson
                        {% endfor %}
                    </ul>
                    <a href="{{ path('pasta_show', {'id' : pasta.id}) }}">add new cottura</a>
                </td>
            </tr>
            <tr>
                <th>Fabrication</th>
                <td>
                    {{ pasta.fabrications|join(', ') }}
                </td>
            </tr>

            </tbody>
        </table>

        <li><a href="{{ path('pasta_edit', {'id': pasta.id}) }}">edit</a></li>

        <li><a href="{{ path('pasta_list') }}">back to list</a></li>

        <li><a href="{{ path('cottura_newinpasta', {'id' : pasta.id}) }}">add a cottura</a></li>

        <li><a href="{{ path('app_placard_show', { 'id': placard.id}) }}">back to placard</a></li>


    {% endblock %}
{% endblock %}

